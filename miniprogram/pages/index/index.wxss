/**index.wxss**/

.container{
  height: 1500rpx;
  background: white;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: white;
}
.container .search-left{
  flex: 8;
  background: #fff;
  text-align: left;
  border-radius: 15rpx;
  margin-right: 15rpx;
  margin-left: 10rpx;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
  width: 280px;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: white;
  color: #000;
}

.title{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: white;
}

.title text{
  font-size: 45rpx;
  font-weight: 535;
  margin-left: 25rpx;
  display: inline-block;
}

.my-mini-icon{
    /*position: absolute;*/
  /* display: inline-block; */
  width: 55rpx;
  height: 55rpx;
  border-radius: 55rpx;
  float: right;
  margin-right: 15rpx;
  /* top: 10rpx; */
  /* vertical-align: middle; */
}

.bottom-input-area{
  height: 10%;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background: #fff;
}

.bottom-input-area .bottom-input-box{
  margin: 0 5% 0 5%;
  height: 80%;
  border: 1rpx solid #dedede;
  border-radius: 40rpx;
}

.bottom-input-box image{
  display: inline-block;
  vertical-align: middle;
  margin: 0rpx 20rpx 0rpx 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.bottom-input-box input{
  display: inline-block;
  vertical-align: middle;
  margin: 10rpx;
  height: 80%;
  font-size: 30rpx;
  width: 65%;
}

.bottom-input-box .bottom-message{
  margin-left: 35rpx;
}

.bottom-input-box .bottom-camera{
  margin-right: 35rpx;
}

.instruction-placeholder{
  color: #cecece;
}

.float-right{
  float: right;
}

.search-box {
        border: 1px solid black;
}

.bottom-gap{
  height: 150rpx;
  width: 100%;
  background: #fff;
}