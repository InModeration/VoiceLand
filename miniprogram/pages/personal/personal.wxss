/* miniprogram/pages/personal/personal.wxss */

page {
      width: 100%;
      height: 100%;
      position: fixed;
}

.user {
      width: 725rpx;
      background: #fff;
      padding: 30rpx 25rpx 30rpx 0;
      margin: 15rpx 0 0 0;
      border-top: 1px solid #eee;
      border-bottom: 1px solid #dcdcdc;
      box-shadow: 0 2px 5px #eee;
}

.likeAndAvatar {
      padding-top: 40rpx; 
      display: flex;
      flex-direction: row;
}

.avatar {
      display: inline-block;
      width: 100rpx;
      height: 100rpx;
      border-radius: 80rpx;
}

.follow {
      margin-top: 30rpx;
      margin-left: 65%;
      font-size: 25rpx;
      font-weight: 600;
      width: 100rpx;
      height: 40rpx;
      background: rgba(169, 169, 169, 0.596);
      border-radius: 60px;
      text-align: center;
      padding-top: 10rpx;
}

.user .user-info {
      flex: 5;
      text-align: left;
}

.user .user-info text {
      display: block;
}

.user .user-info {
      padding: 8rpx 0 10rpx 0;
      font-size: 30rpx;
      color: #818a8f;
}

.user-nickname {
      font-size: 35rpx;
      color: white;
      font-weight: 600;
      margin: 20rpx;
}

.user-info {
      margin: 20rpx;
}

.user-info text {
      font-size: 20rpx;
      margin: 0rpx 10rpx 0rpx 0rpx;
      padding: 10rpx;
      background: #cdcdcd42;
      border-radius: 30px 30px 30px 30px;
      color: white;
}

.user-motto {
      font-size: 20rpx;
      color: white;
      margin: 20rpx;
      margin-top: 40rpx;
}

.user-box {
      height: 400rpx;
      padding-left: 20rpx;
      background-repeat: no-repeat;
      background-size: 100% 130%;
      -moz-background-size: 100% 100%;
}

.personal-box {
      width: 100%;
      height: 100%;
      border-radius: 10px 10px 0px 0px;
      background: white;
      margin-top: -55rpx;
      font-weight: 500;
      color: black;
}

.total {
      font-size: 25rpx;
      font-weight: 600;
      color: black;
      padding: 28rpx 0rpx 30rpx 40rpx;
}

.sayings {
      margin: 20rpx;
}

.saying {
      display: flex;
      flex-direction: row;
}

.saying-content {
      width: 80%;
      font-size: 32rpx;
      font-weight: 300;
      margin-left: 30rpx;
}

.saying-operation {
      display: flex;
      flex-direction: row;
      margin-top: 5%;
}

.saying-operation image {
      height: 30rpx;
      width: 30rpx;
}

.saying-operation text {
      font-size: 20rpx;
      color: #cdcdcd;
}

.like {
      margin-right: 10rpx;
}

.comment {
      margin-right: 10rpx;
}

.like_number {
      margin: 0rpx 50rpx 0rpx 0rpx;
}

.comment_number {
      margin: 0rpx auto 0rpx 0rpx;
}

.more {
      float: right;
}

.day {
      font-weight: 600;
      font-size: 25rpx;
      margin: 2px 0px 0px 20rpx;
}

.month {
      font-weight: 300;
      font-size: 18rpx;
      margin: 2px 0px 0px 20rpx;
}

.date {
      display: flex;
      flex-direction: column;
}

.line {
      width: 98%;
      height: 1px;
      background-color: darkgray;
      margin: 5% 1% 5% 1%;
}
