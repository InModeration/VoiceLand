/* miniprogram/pages/chatlist/chatlist.wxss */

.serach {
      margin-top: 18rpx;
      margin-left: 25rpx;
      margin-right: 25rpx;
      padding-left: 25rpx;
      background-color: #f3f3f3;
      border-radius: 12rpx;
}

.serach_view_show {
      display: block;
      color: #808080;
      padding-left: 285rpx;
      padding-top: 15rpx;
      padding-bottom: 15rpx;
      font-size: 18rpx;
      background-color: #f3f3f3;
      border-radius: 12rpx;
}

.message_list {
      background-color: #f2f2f2;
      padding-left: 8rpx;
      padding-right: 8rpx;
}

.item {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      padding: 8rpx;
      margin-left: 8rpx;
      margin-right: 8rpx;
      margin-top: 8rpx;
      background-color: #fff;
      /**  border: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #d0d0d0;
  border-radius: 5rpx;*/
}

.item-left {
      margin-top: 15rpx;
      display: table-cell;
      text-align: center;
}

.image {
      width: 88rpx;
      height: 88rpx;
      border-radius: 44rpx;
      background-color: #eee;
}

.item-middle {
      flex: 1;
      margin-left: 10rpx;
      padding-top: 13rpx;
      overflow: hidden;
}

.title {
      color: #000;
      font-family: "微软雅黑";
      font-weight: bold;
      line-height: 20rpx;
      padding: 32rpx 16rpx, 0, 16rpx;
      font-size: 25rpx;
      margin-top: 60rpx;
      overflow: hidden; /*自动隐藏文字*/
      text-overflow: ellipsis; /*文字隐藏后添加省略号*/
}

.title-box {
      margin-top: 5rpx;
}

.message {
      font-family: "微软雅黑";
      color: #808080;
      line-height: 10rpx;
      font-size: 20rpx;
      padding: 0 16rpx, 0, 16rpx;
      overflow: hidden; /**自动隐藏文字*/
      text-overflow: ellipsis; /**文字隐藏后添加省略号*/
      white-space: nowrap; /**强制不换行*/
}

.message-box {
      margin-top: 5rpx;
      width: 50rpx;
}

.item_right {
      padding-top: 13rpx;
      overflow: hidden;
}

.time {
      color: #808080;
      font-size: 20rpx;
}

.mark {
      position: relative;
      left: 13rpx;
      top: 10rpx;
      background-color: #f74c31;
      text-align: center;
      font-size: 15rpx;
      width: 30rpx;
      height: 30rpx;
      color: #fff;
      display: table-cell;
      border-radius: 50%;
      -moz-border-radius: 50%;
      -webkit-border-radius: 50%;
}

.line {
      height: 1px;
      width: 100%;
      background-color: #e0e1e2;
}

.text {
      position: absolute;
      width: 90%;
      height: 90%;
      text-align: center;
      left: 7%;
      top: 17%;
}
